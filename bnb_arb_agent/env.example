# .env — Copy this to your project root, fill in your keys

# ── Reddit ──
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_SECRET=your_reddit_secret

# ── News APIs ──
NEWSAPI_KEY=your_newsapi_key
GNEWS_KEY=your_gnews_key
CRYPTOPANIC_KEY=your_cryptopanic_key

# ── Twitter/X ──
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# ── AI / LLM ──
GOOGLE_API_KEY=your_gemini_api_key

# ── On-Chain ──
BSCSCAN_API_KEY=your_bscscan_api_key        # Free at bscscan.com/register
PRIVATE_KEY=your_TESTNET_wallet_private_key  # ⚠️ Testnet ONLY!

# ── MCP Execution Agent ──
MCP_SERVER_URL=http://localhost:3000          # bnbchain-mcp server URL
WALLET_ADDRESS=your_testnet_wallet_address   # Public address for balance checks
TRADE_AMOUNT_BNB=0.01                        # Start small (0.01 tBNB)
MIN_PROFIT_THRESHOLD=0.005                   # 0.5% minimum profit after gas
SLIPPAGE_TOLERANCE=0.02                      # 2% slippage tolerance
EXECUTION_ENABLED=true                       # Set to false to disable live trades
CIRCUIT_BREAKER_MAX_FAILURES=3               # Pause after N consecutive failures
CIRCUIT_BREAKER_COOLDOWN_MIN=15              # Minutes to wait before retrying

# ── Optional: boosts GitHub dev activity monitor ──
GITHUB_TOKEN=your_github_personal_access_token
